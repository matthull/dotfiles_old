if [[ ! -d $HOME/.heroku ]]; then

  if [[ $OSFAMILY == Linux ]]; then
    wget -qO- https://toolbelt.heroku.com/install-ubuntu.sh | sh
    success "Heroku toolbelt installed"
  fi

  if [[ $OSFAMILY == OSX ]]; then
    info "Manually install the heroku toolbelt from here: https://toolbelt.herokuapp.com/osx"
  fi

  if [[ $OSFAMILY == Cygwin ]]; then
    info "Heroku toolbelt standalone not supported on Cygwin (use gem instead)"
  fi

else
  info "Heroku toolbelt already installed"
fi

